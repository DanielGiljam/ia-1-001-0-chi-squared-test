<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?android:attr/colorBackgroundFloating"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/specify_value_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginBottom="16dp"
        android:layout_row="0"
        android:text="@string/dialog_specify_value_title"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.DialogWindowTitle"
        app:layout_constraintBottom_toTopOf="@+id/specify_value_input_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.giljam.daniel.chisquaredtest.CustomEditText
        android:id="@+id/specify_value_input_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_edit_text"
        android:ems="5"
        android:imeOptions="actionDone|flagNoExtractUi"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textSelectHandle="@drawable/custom_text_select_handle_middle_material"
        android:textSelectHandleLeft="@drawable/custom_text_select_handle_left_material"
        android:textSelectHandleRight="@drawable/custom_text_select_handle_right_material"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>